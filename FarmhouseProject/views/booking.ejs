<div class="booking-page">
    <!-- Hero Section -->
    <section class="booking-hero">
        <div class="container">
            <div class="hero-content text-center">
                <div class="hero-icon">
                    <i class="fas fa-leaf"></i>
                </div>
                <h1 class="hero-title">Green Valley Farmhouse</h1>
                <p class="hero-subtitle">Experience nature's serenity in our eco-friendly retreat</p>
            </div>
        </div>
    </section>

    <!-- Booking Form Section -->
    <section class="booking-form-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="booking-card">
                        <div class="booking-card-header">
                            <h2>Book Your Stay</h2>
                            <p>Relax and reconnect with nature at our sustainable farmhouse</p>
                        </div>
                        <div class="booking-card-body">
                            <form action="/booking" method="POST">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Full Name</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                <input type="text" name="name" class="form-control"
                                                    placeholder="John Doe" required />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                                <input type="email" name="email" class="form-control"
                                                    placeholder="john@example.com" required />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label>Phone Number</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                                <input type="tel" name="phone" class="form-control"
                                                    placeholder="+91 9876543210" required pattern="[6-9]{1}[0-9]{9}" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Check-in Date</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i
                                                        class="fas fa-calendar-day"></i></span>
                                                <input type="date" name="checkIn" class="form-control" required
                                                    min="<%= new Date().toISOString().split('T')[0] %>" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Check-out Date</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i
                                                        class="fas fa-calendar-day"></i></span>
                                                <input type="date" name="checkOut" class="form-control" required />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label>Number of Guests</label>
                                            <select class="form-select" name="guests" required>
                                                <option value="">Select guests</option>
                                                <% for(let i=1; i <=6; i++) { %>
                                                    <option value="<%= i %>">
                                                        <%= i %>
                                                            <%= i===1 ? 'guest' : 'guests' %>
                                                    </option>
                                                    <% } %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label>Special Requests</label>
                                            <textarea name="requests" class="form-control" rows="3"
                                                placeholder="Any special requirements..."></textarea>
                                        </div>
                                    </div>

                                    <!-- Price Calculator -->
                                    <div class="col-12">
                                        <div class="price-calculator">
                                            <div class="price-row">
                                                <span>2 nights x ₹5000</span>
                                                <span>₹10000</span>
                                            </div>
                                            <div class="price-row">
                                                <span>Service fee</span>
                                                <span>₹500</span>
                                            </div>
                                            <div class="price-row total">
                                                <span>Total</span>
                                                <span>₹10500</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <button class="btn booking-btn" type="submit">
                                            <i class="fas fa-calendar-check me-2"></i>Confirm Booking
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Amenities Section -->
                    <div class="amenities-card mb-5">
                        <div class="amenities-header">
                            <h3>Our Amenities</h3>
                            <p>Everything you need for a comfortable stay</p>
                        </div>
                        <div class="amenities-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="amenity-item">
                                        <div class="amenity-icon">
                                            <i class="fas fa-wifi"></i>
                                        </div>
                                        <div class="amenity-text">
                                            <h5>Free WiFi</h5>
                                            <p>High-speed internet throughout</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="amenity-item">
                                        <div class="amenity-icon">
                                            <i class="fas fa-swimmer"></i>
                                        </div>
                                        <div class="amenity-text">
                                            <h5>Swimming Pool</h5>
                                            <p>Seasonal outdoor pool</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="amenity-item">
                                        <div class="amenity-icon">
                                            <i class="fas fa-utensils"></i>
                                        </div>
                                        <div class="amenity-text">
                                            <h5>Breakfast Included</h5>
                                            <p>Fresh farm-to-table meals</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="amenity-item">
                                        <div class="amenity-icon">
                                            <i class="fas fa-car"></i>
                                        </div>
                                        <div class="amenity-text">
                                            <h5>Parking Available</h5>
                                            <p>Secure on-site parking</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="amenity-item">
                                        <div class="amenity-icon">
                                            <i class="fas fa-tree"></i>
                                        </div>
                                        <div class="amenity-text">
                                            <h5>Garden View</h5>
                                            <p>Beautiful natural surroundings</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="amenity-item">
                                        <div class="amenity-icon">
                                            <i class="fas fa-dog"></i>
                                        </div>
                                        <div class="amenity-text">
                                            <h5>Pet Friendly</h5>
                                            <p>Bring your furry friends</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    // Simple date validation
    document.addEventListener('DOMContentLoaded', function () {
        const checkInInput = document.querySelector('input[name="checkIn"]');
        const checkOutInput = document.querySelector('input[name="checkOut"]');

        if (checkInInput && checkOutInput) {
            checkInInput.addEventListener('change', function () {
                if (this.value) {
                    checkOutInput.min = this.value;
                    if (checkOutInput.value && checkOutInput.value < this.value) {
                        checkOutInput.value = '';
                    }
                }
            });
        }
    });
</script>