<% if (toast) { %>
    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 9999;">
        <div id="liveToast" class="toast align-items-center text-white bg-<%= toast.type %> border-0" role="alert"
            aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="3000">
            <div class="d-flex">
                <div class="toast-body">
                    <%= toast.message %>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                    aria-label="Close"></button>
            </div>
        </div>
    </div>
    <% } %>

        <div class="contact-page">
            <!-- Hero Section -->
            <section class="contact-hero">
                <div class="container contact-container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8 text-center">
                            <h1 class="contact-title">Connect With Us</h1>
                            <p class="contact-subtitle">We're here to help with any questions about your stay at Green
                                Fields Farm
                            </p>
                            <div class="contact-buttons">
                                <a href="#contact-form" class="btn contact-btn-main">
                                    <i class="fas fa-envelope me-2"></i>Send Message
                                </a>
                                <a href="https://wa.me/8623099391" target="_blank" class="btn contact-btn-outline">
                                    <i class="fab fa-whatsapp me-2"></i>WhatsApp
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>


            <section class="py-5 bg-light">
                <div class="container">
                    <div class="row g-4">
                        <!-- Contact Info Card -->
                        <div class="col-lg-6" data-aos="fade-right">
                            <div class="contact-info-card p-4 p-lg-5 h-100 shadow-sm">
                                <h2 class="section-title mb-4 position-relative pb-3">
                                    <span class="position-relative">Our Contact Details</span>
                                </h2>
                                <div class="contact-items">
                                    <!-- Address -->
                                    <div class="contact-item d-flex mb-4 p-3 rounded-3 bg-white shadow-sm"
                                        data-aos="fade-up" data-aos-delay="100">
                                        <div class="contact-icon me-3 bg-primary bg-opacity-10 p-3 rounded-circle">
                                            <i class="fas fa-map-marker-alt text-primary fs-4"></i>
                                        </div>
                                        <div>
                                            <h5 class="contact-item-title mb-1 fw-bold">Address</h5>
                                            <p class="contact-item-text mb-0">123 Green Fields Farm, Near ABC Village,
                                                XYZ District
                                            </p>
                                        </div>
                                    </div>
                                    <!-- Phone -->
                                    <div class="contact-item d-flex mb-4 p-3 rounded-3 bg-white shadow-sm"
                                        data-aos="fade-up" data-aos-delay="200">
                                        <div class="contact-icon me-3 bg-primary bg-opacity-10 p-3 rounded-circle">
                                            <i class="fas fa-phone-alt text-primary fs-4"></i>
                                        </div>
                                        <div>
                                            <h5 class="contact-item-title mb-1 fw-bold">Phone</h5>
                                            <p class="contact-item-text mb-0">+91 12345 67890</p>
                                        </div>
                                    </div>
                                    <!-- WhatsApp -->
                                    <div class="contact-item d-flex mb-4 p-3 rounded-3 bg-white shadow-sm"
                                        data-aos="fade-up" data-aos-delay="300">
                                        <div class="contact-icon me-3 bg-primary bg-opacity-10 p-3 rounded-circle">
                                            <i class="fab fa-whatsapp text-primary fs-4"></i>
                                        </div>
                                        <div>
                                            <h5 class="contact-item-title mb-1 fw-bold">WhatsApp</h5>
                                            <p class="contact-item-text mb-0">
                                                <a href="https://wa.me/8623099391" target="_blank"
                                                    class="whatsapp-link d-inline-flex align-items-center">
                                                    Chat with us <i class="fas fa-external-link-alt ms-2 fs-6"></i>
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                    <!-- Email -->
                                    <div class="contact-item d-flex p-3 rounded-3 bg-white shadow-sm" data-aos="fade-up"
                                        data-aos-delay="400">
                                        <div class="contact-icon me-3 bg-primary bg-opacity-10 p-3 rounded-circle">
                                            <i class="fas fa-envelope text-primary fs-4"></i>
                                        </div>
                                        <div>
                                            <h5 class="contact-item-title mb-1 fw-bold">Email</h5>
                                            <p class="contact-item-text mb-0">contact@greenfieldsfarm.com</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Google Map -->
                        <div class="col-lg-6" data-aos="fade-left">
                            <div
                                class="map-container h-100 rounded-4 overflow-hidden shadow-lg border border-3 border-white">
                                <iframe
                                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3506.223104371012!2d77.2091233150796!3d28.50288898247095!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x390ce1c1a665b9a9%3A0x3a22d3569a1a1a1a!2sGreen%20Fields%20Farm!5e0!3m2!1sen!2sin!4v1620000000000!5m2!1sen!2sin"
                                    width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
                                    class="min-vh-50">
                                </iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </section>


            <!-- Contact Form -->
            <section id="contact-form" class="py-5 bg-white" data-aos="fade-up">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="text-center mb-5" data-aos="fade-down">
                                <h2 class="display-5 fw-bold mb-3">Send Us a Message</h2>
                                <p class="lead text-muted">Fill out the form below and we'll get back to you as soon as
                                    possible</p>
                            </div>
                            <form action="/contact" method="POST"
                                class="contact-form bg-light p-4 p-md-5 rounded-4 shadow-sm" data-aos="zoom-in">
                                <div class="row g-3">
                                    <div class="col-md-6" data-aos="fade-right">
                                        <label class="form-label fw-semibold">Your Name</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white">
                                                <i class="fas fa-user text-muted"></i>
                                            </span>
                                            <input type="text" name="name" class="form-control" placeholder="John Doe"
                                                value="<%= data.name || ''%>" />
                                        </div>
                                        <% if (errors.name) { %>
                                            <p class="text-danger">
                                                <%= errors.name.msg %>
                                            </p>
                                            <% } %>
                                    </div>
                                    <div class="col-md-6" data-aos="fade-left">
                                        <label class="form-label fw-semibold">Your Email</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white">
                                                <i class="fas fa-envelope text-muted"></i>
                                            </span>
                                            <input type="email" name="email" class="form-control"
                                                placeholder="john@example.com" value="<%= data.email || ''%>" />
                                        </div>
                                        <% if (errors.email) { %>
                                            <p class="text-danger">
                                                <%= errors.email.msg %>
                                            </p>
                                            <% } %>
                                    </div>
                                    <div class="col-12" data-aos="fade-up">
                                        <label class="form-label fw-semibold">Your Phone Number</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white">
                                                <i class="fas fa-phone text-muted"></i>
                                            </span>
                                            <input type="tel" name="phone" class="form-control"
                                                placeholder="+91 12345 67890" value="<%= data.phone || ''%>" />
                                        </div>
                                        <% if (errors.phone) { %>
                                            <p class="text-danger">
                                                <%= errors.phone.msg %>
                                            </p>
                                            <% } %>
                                    </div>
                                    <div class="col-12" data-aos="fade-up">
                                        <label class="form-label fw-semibold">Purpose</label>
                                        <select name="purpose" class="form-select" value="<%= data.purpose || ''%>">
                                            <option value="">Select a purpose</option>
                                            <option value="Booking">Booking Inquiry</option>
                                            <option value="Event Inquiry">Event Inquiry</option>
                                            <option value="General Questions">General Questions</option>
                                            <option value="Other">Other</option>
                                        </select>
                                        <% if (errors.purpose) { %>
                                            <p class="text-danger">
                                                <%= errors.purpose.msg %>
                                            </p>
                                            <% } %>
                                    </div>
                                    <div class="col-12" data-aos="fade-up">
                                        <label class="form-label fw-semibold">Message</label>
                                        <textarea name="message" rows="5" class="form-control"
                                            placeholder="Your message here..." maxlength="500"></textarea>
                                        <div class="form-text text-end">Max 500 characters</div>
                                    </div>
                                    <div class="col-12 mt-4" data-aos="zoom-in-up">
                                        <button type="submit"
                                            class="btn btn-success btn-lg w-100 py-3 fw-bold rounded-pill shadow">
                                            <i class="fas fa-paper-plane me-2"></i>Send Message
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>


            <!-- WhatsApp CTA -->
            <section class="py-4 bg-success bg-opacity-10" data-aos="fade-up">
                <div class="container text-center">
                    <div class="d-inline-block p-3 p-md-4 rounded-4 bg-white shadow-sm" data-aos="zoom-in"
                        data-aos-delay="200">
                        <div class="d-flex flex-column flex-md-row align-items-center gap-3">
                            <div class="whatsapp-icon bg-success rounded-circle p-3" data-aos="fade-right"
                                data-aos-delay="400">
                                <i class="fab fa-whatsapp text-white fs-2"></i>
                            </div>
                            <div class="text-start" data-aos="fade-up" data-aos-delay="600">
                                <h3 class="h5 fw-bold mb-1">Need immediate assistance?</h3>
                                <p class="mb-0 text-muted">Chat with us directly on WhatsApp</p>
                            </div>
                            <a href="https://wa.me/8623099391" target="_blank"
                                class="btn btn-success btn-lg px-4 rounded-pill fw-bold ms-md-auto" data-aos="fade-left"
                                data-aos-delay="800">
                                <i class="fab fa-whatsapp me-2"></i>Start Chat
                            </a>
                        </div>
                    </div>
                </div>
            </section>


            <!-- FAQ Section -->
            <section class="py-5 bg-light" data-aos="fade-up">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="text-center mb-5" data-aos="fade-up" data-aos-delay="100">
                                <h2 class="display-5 fw-bold mb-3">Frequently Asked Questions</h2>
                                <p class="lead text-muted">Find answers to common questions about our farm stays</p>
                            </div>
                            <div class="accordion" id="faqAccordion">
                                <% faq.map((item, index)=> { %>
                                    <div class="accordion-item border-0 rounded-3 shadow-sm mb-3 overflow-hidden"
                                        data-aos="fade-up" data-aos-delay="<%= 200 + index * 100 %>">
                                        <h3 class="accordion-header" id="heading<%= index %>">
                                            <button class="accordion-button collapsed py-3 fw-bold" type="button"
                                                data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>"
                                                aria-expanded="false" aria-controls="collapse<%= index %>">
                                                <%= item.question %>
                                            </button>
                                        </h3>
                                        <div id="collapse<%= index %>" class="accordion-collapse collapse"
                                            aria-labelledby="heading<%= index %>" data-bs-parent="#faqAccordion">
                                            <div class="accordion-body py-2">
                                                <p class="mb-0">
                                                    <%= item.answer %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
            </section>


            <!-- Book CTA -->
            <section class="py-5 bg-white" data-aos="fade-up">
                <div class="container text-center">
                    <div class="p-4 p-md-5 bg-success bg-opacity-10 rounded-4" data-aos="zoom-in" data-aos-delay="100">
                        <h2 class="display-5 fw-bold mb-3">Ready for Your Farm Stay?</h2>
                        <p class="lead mb-4">Experience the beauty of nature at Green Fields Farm</p>
                        <div class="d-flex gap-3 justify-content-center" data-aos="fade-up" data-aos-delay="200">
                            <a href="/booking" class="btn btn-success btn-lg px-4 rounded-pill fw-bold shadow">
                                <i class="fas fa-calendar-check me-2"></i>Check Availability
                            </a>
                            <a href="/gallery" class="btn btn-outline-success btn-lg px-4 rounded-pill fw-bold">
                                <i class="fas fa-images me-2"></i>View Gallery
                            </a>
                        </div>
                    </div>
                </div>
            </section>

        </div>

        <script>
            // Simple animation for FAQ accordion
            document.addEventListener("DOMContentLoaded", function () {
                // Toast initialization
                const toastEl = document.getElementById('liveToast'); // Changed to use ID
                if (toastEl) {
                    // Initialize Bootstrap Toast
                    const toast = new bootstrap.Toast(toastEl, {
                        autohide: true,
                        delay: 3000
                    });

                    // Show the toast
                    toast.show();

                    // Remove toast from DOM after hide
                    toastEl.addEventListener('hidden.bs.toast', function () {
                        toastEl.remove();
                    });
                }

                // FAQ accordion animation
                document.querySelectorAll('.accordion-button').forEach(button => {
                    button.addEventListener('click', () => {
                        const icon = button.querySelector('.fas');
                        if (icon) {
                            icon.classList.toggle('fa-chevron-down');
                            icon.classList.toggle('fa-chevron-up');
                        }
                    });
                });
            });



        </script>